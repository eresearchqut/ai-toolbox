server {
    listen 80;
    server_name localhost;
    absolute_redirect off;

    location = / {
        return 302 "/ai-toolbox/job/";
    }

    location /ai-toolbox/ {
        alias /usr/share/nginx/html/;
        index index.html;
        include  /etc/nginx/mime.types;
        add_header Content-Security-Policy "frame-ancestors 'self' ${ALLOWED_DOMAINS};";
    }
}
